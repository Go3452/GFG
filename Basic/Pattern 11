class Solution {

    void printTriangle(int n) {
     int count=1;
     for(int i=0;i<n;i++)
     {
      if(i%2==0)
       count=1;
      else
       count=0;
      for(int j=0;j<=i;j++)
      {
       System.out.print(count + " ");
       count++;
       count%=2;
      }
      System.out.println();
     }
    }
}
