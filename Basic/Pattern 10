class Solution {

    void printTriangle(int n) {
        for(int i=0;i<2*n-1;i++)
        {
         if(i<n)
         {
          for(int j=0;j<=i;j++)
           System.out.print("* ");
          System.out.println();
         }
         else
         {
          for(int j=2*n-2-i;j>=0;j--)
           System.out.print("* ");
          System.out.println();
         }
        }
    }
}
