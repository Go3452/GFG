class Solution {
    static String triDownwards(String S){
        String ans="",dot="";
        for(int i=0;i<S.length();i++)
        {
         ans+=S.substring(i,S.length());
         if(i!=S.length()-1)
         {
         dot+=".";
         ans+=dot;
        }
        }
        return ans;
    }
}
