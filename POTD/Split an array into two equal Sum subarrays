class Solution {
    public boolean canSplit(int arr[]) {
        int n = arr.length;
        long sum=0,sum1=0;
        for(int i=0;i<n;i++)
         sum+=arr[i];
        for(int i=0;i<n;i++)
        {
         sum1+=arr[i];
         sum-=arr[i];
         if(sum==sum1)
          return true;
        }
        return false;
    }
}
